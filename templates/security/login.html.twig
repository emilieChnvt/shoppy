{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center px-4 py-8 bg-gray-50">
        <form method="post" class="w-full max-w-sm sm:max-w-md md:max-w-lg bg-white p-3 rounded-lg shadow flex flex-col gap-y-[20px]">

            {% if app.user %}
                <div class="text-center text-sm mb-4">
                    Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>,
                    <a href="{{ path('app_logout') }}" class="text-blue-600 underline">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="text-xl font-semibold text-center text-gray-800">Connexion</h1>

            <div>
                <label for="inputEmail" class="block mb-1 text-gray-700">Email</label>
                <input type="email" name="email" id="inputEmail" value="{{ last_username }}" autocomplete="email" required autofocus class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#D66853]"
                >
            </div>

            <div>
                <label for="inputPassword" class="block mb-1 text-gray-700">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#D66853]"
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center space-x-2 text-sm">
                <input type="checkbox" name="_remember_me" id="remember_me" class="rounded border-gray-300">
                <label for="remember_me" class="text-gray-700 select-none">Se souvenir de moi</label>
            </div>

            <a href="{{ path('connect_google_start') }}"
               class="mt-6 w-full border border-gray-300 text-black font-medium py-2 px-6 rounded-xl text-sm hover:bg-gray-100 transition flex items-center justify-center gap-3">
                <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google logo" class="w-4 h-4">
                <span>Se connecter avec Google</span>
            </a>

            <button type="submit" class="w-full bg-[#D66853] text-white rounded py-2 hover:bg-[#bf503f] transition font-semibold">
                Se connecter
            </button>

        </form>
    </div>
{% endblock %}
