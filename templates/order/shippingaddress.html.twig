{% extends 'base.html.twig' %}

{% block title %}Choix de l'adresse de livraison{% endblock %}

{% block body %}
    <div class="px-4 max-w-3xl mx-auto mt-10">
        <h3 class="text-xl font-semibold mb-6 text-gray-800">Choisir une adresse de livraison</h3>

        {% if app.user.profile.addresses %}
            <div class="space-y-4">
                {% for address in app.user.profile.addresses %}
                    <a href="{{ path('app_order_payment', { idBilling: billingAddress.id, idShipping: address.id }) }}"
                       class="block border rounded-lg p-4 hover:bg-gray-50 transition shadow-sm">
                        <div class="text-gray-700">
                            <p class="font-medium">{{ address.streetNumber }} {{ address.street }}</p>
                            <p>{{ address.zipcode }}, {{ address.zipcode }}</p>
                            <p>{{ address.country }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-600">Aucune adresse enregistrée.</p>
        {% endif %}

        <hr class="my-8">

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.streetNumber, 'Numéro de rue', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.streetNumber, {'attr': {'class': 'block w-full rounded-md border border-gray-300 shadow-sm focus:ring-[#D66853] focus:border-[#D66853] text-sm p-2'}}) }}
            {{ form_errors(form.streetNumber) }}
        </div>

        <div>
            {{ form_label(form.street, 'Rue', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.street, {'attr': {'class': 'block w-full rounded-md border border-gray-300 shadow-sm focus:ring-[#D66853] focus:border-[#D66853] text-sm p-2'}}) }}
            {{ form_errors(form.street) }}
        </div>

        <div>
            {{ form_label(form.zipcode, 'Code postal', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.zipcode, {'attr': {'class': 'block w-full rounded-md border border-gray-300 shadow-sm focus:ring-[#D66853] focus:border-[#D66853] text-sm p-2'}}) }}
            {{ form_errors(form.zipcode) }}
        </div>
        <div>
            {{ form_label(form.country, 'Pays', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1 '}}) }}
            {{ form_widget(form.country, {'attr': {'class': 'block w-full rounded-md border border-gray-300 shadow-sm focus:ring-[#D66853] focus:border-[#D66853] text-sm p-2'}}) }}
            {{ form_errors(form.country) }}
        </div>

        <div>
            <button type="submit" disabled
                    class="inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#D66853] hover:bg-[#bf503f] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#D66853]">
                Suivant
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
