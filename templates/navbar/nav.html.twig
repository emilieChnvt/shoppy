{% block javascript %}
{% block importmap %}
    {{ importmap('nav') }}
{% endblock %}
{% endblock %}

<nav class="py-5 ">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between">
            <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                <!-- Mobile menu button-->
                <button type="button" id="menu-toggle" class="relative inline-flex items-center justify-center rounded-md p-2 text-[#D66853] hover:bg-[#D66853] hover:text-white focus:ring-2 focus:ring-[#D66853] focus:outline-none focus:ring-inset" aria-expanded="false">
                    <span class="absolute -inset-0.5"></span>
                    <span class="sr-only">Open main menu</span>
                    <!-- Icone menu fermÃ© -->
                    <svg class="block size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                    <!-- Icone menu ouvert -->
                    <svg class="hidden size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="flex flex-col flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                <div class="flex shrink-0 items-center">
                    <img src="{{ asset('logo + nom.png') }}" alt="" class="d-block mx-auto">
                </div>
                <div class="hidden sm:ml-6 sm:block mb-4">
                    <div class="flex space-x-4">
                        {% for category in categories %}
                            <a href="{{ path('app_category_show', {id: category.id}) }}"
                               class="nav-link text-[#D66853] hover:text-[#bf503f] font-semibold transition-colors duration-200">
                                {{ category.name }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="sm:hidden hidden mt-4" id="mobile-menu">
        <div class="space-y-1 px-2 pt-5 pb-3">
            {% for category in categories %}
                <a href="{{ path('app_category_show', {id: category.id}) }}"
                   class="block px-3 py-2 rounded-md text-base font-medium text-[#D66853] hover:bg-[#D66853] hover:text-white transition-colors duration-200">
                    {{ category.name }}
                </a>
            {% endfor %}
        </div>
    </div>
</nav>
