{% extends 'base.html.twig' %}

{% block title %}Donne ton retour{% endblock %}

{% block body %}
    <div class="px-4 max-w-3xl mx-auto mt-8 bg-[#fdf6f2] rounded-lg border border-[#d7cfc8] p-6 shadow-sm">

        <h2 class="text-2xl font-semibold mb-6 text-[#6b4a3a]">
            Donne ton retour sur l'avis de <span class="underline decoration-[#6b4a3a]">{{ feedback.author.firstName }}</span>
        </h2>

        {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}

        <div>
            <label class="block mb-1 text-[#8b6e58] font-medium">Note :</label>
            <div class="flex items-center gap-3 text-[#4a3f35]">
                {{ form_widget(form, {'attr': {'class': 'text-[#d66853]'}}) }}
            </div>
            {{ form_errors(form) }}
        </div>

        <button type="submit"
                class="w-full bg-[#D66853] text-white py-3 rounded-xl font-semibold hover:bg-[#bf503f] transition">
            Envoyer
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
