{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center px-6 sm:px-10 md:px-20 lg:px-40 py-10">
        <div class="w-full max-w-sm sm:max-w-md md:max-w-lg bg-white p-6 rounded-lg shadow flex flex-col gap-y-6">

            <h1 class="text-2xl font-bold text-center text-[#D66853]">Créer un compte</h1>

            {{ form_start(registrationForm) }}

            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block mb-1 text-gray-700'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#D66853]'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block mb-1 text-gray-700'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#D66853]'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="flex items-center space-x-2 text-sm">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'rounded border-gray-300'}}) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-gray-700 select-none'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit"
                    class="w-full bg-[#D66853] text-white rounded py-2 hover:bg-[#bf503f] transition font-semibold">
                S'inscrire
            </button>

            {{ form_end(registrationForm) }}

            <div class="text-center text-sm text-gray-500 mt-4">ou</div>

            <a href="{{ path('connect_google_start') }}"
               class="w-full inline-flex justify-center items-center gap-2 border border-gray-300 rounded px-4 py-2 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition">
                <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google icon" class="h-5 w-5">
                Continuer avec Google
            </a>

            <p class="text-center mt-4 text-sm text-gray-600">
                Vous avez déjà un compte ?
                <a href="{{ path('app_login') }}" class="text-[#D66853] hover:underline">Connectez-vous</a>
            </p>
        </div>
    </div>
{% endblock %}
