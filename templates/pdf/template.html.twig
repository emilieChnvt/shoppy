<table>
    <thead>
    <tr>
        <th>Produit</th>
        <th>Prix unitaire</th>
        <th>Quantité</th>
        <th>Sous-total</th>
    </tr>
    </thead>
    <tbody>
    {% for item in order.orderItems %}
        <tr>
            <td>{{ item.product.name }}</td>
            <td>{{ item.product.price }} €</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.quantity * item.product.price }} €</td>
        </tr>
    {% else %}
        <tr>
            <td >Aucun produit dans cette commande.</td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <td ><strong>Total</strong></td>
        <td><strong>{{ order.total }} €</strong></td>
    </tr>
    </tfoot>
</table>
