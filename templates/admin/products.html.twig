{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <a href="{{ path('app_product_addImages') }}">create new product</a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }} stock  : {{ product.stock }}</td>
                <td>
                    <a href="{{ path('app_product_show', {id:product.id}) }}">show</a>
                    <a href="{{ path('app_product_edit', {id:product.id}) }}">edit</a>
                    <a href="{{ path('app_product_delete', {id:product.id}) }}">delete</a>
                    <a href="{{ path('app_cart_add', {id:product.id, quantity:1}) }}">add to cart</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
